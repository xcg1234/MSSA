namespace Assignment1_4
{
    struct Point
    {
        public int X;
        public int Y;
    }

    internal class Program
    {
        static void Main(string[] args)
        {
            ///Create a structure named "Point" and 2 data members: X and Y coordinate. 
            ///Declare 2 points: P1 and P2. Determine if P2 is to the right or left of P1 or on same axis ,
            ///by comparing the x xoordinates. ( if p1.x is more than p2.x , it is to the right )
            
            Point P1;
            Point P2;

            Console.Write("Enter X coordinate for P1: ");
            P1.X = int.Parse(Console.ReadLine());
            Console.Write("Enter Y coordinate for P1: ");
            P1.Y = int.Parse(Console.ReadLine());

            Console.Write("Enter X coordinate for P2: ");
            P2.X = int.Parse(Console.ReadLine());
            Console.Write("Enter Y coordinate for P2: ");
            P2.Y = int.Parse(Console.ReadLine());

            if (P1.X > P2.X)
            {
                Console.WriteLine("P2 is to the left of P1");
            }
            else if (P1.X < P2.X)
            {
                Console.WriteLine("P2 is to the right of P1");
            }
            else
            {
                Console.WriteLine("P1 and P2 are on the same vertical axis");
            }
        }
    }
}
